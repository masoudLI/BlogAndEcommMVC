{% extends 'layout.twig' %}

{% block title "Mes articles" %}

{% block body %}

	<div class="row">
		{% for row in posts | batch(4) %}
		<div class="card-deck">
			{% for post in row %}
			<div class="card">
				<div class="card-header">
					<h2><a href="{{ path('blog_show', {slug: post.slug, id: post.id}) }}">
							{{ post.name }}
						</a></h2>
				</div>
				<div class="card-block">
					<p class="card-text">
						{{ post.content | nl2br | excerpt }}
					</p>
					<p class="text-muted">{{ post.created_at | ago}}</p>
				</div>
				<div class="card-footer">
					<a href="{{ path('blog_show', {slug: post.slug, id: post.id}) }}" class="btn btn-primary">
						Voir l'article
					</a>
				</div>
			</div>
			{% endfor %}
		</div>
		{% endfor %}
	</div>


	<ul class="pagerfanta">
		{{paginate(posts, 'blog_index')}}
	</ul>

{% endblock %}
